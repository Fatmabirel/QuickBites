@model List<ResultFeedbackDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Gelen Mesaj İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">

                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Mesajlar Listesi</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            Gelen Mesajlar Aşağıda Yer Almaktadır.
                        </div>
                        <table class="table mt-3 text-center">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Ad Soyad</th>
                                    <th scope="col">Mail</th>
                                    <th scope="col">Telefon</th>
                                    <th scope="col">Tarih</th>
                                    <th scope="col">Başlık</th>
                                    <th scope="col">Açıklama</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    count++;
                                    <tr>
                                        <th>@count</th>
                                        <td>@item.NameSurname</td>
                                        <td>@item.Mail</td>
                                        <td>@item.Phone</td>
                                        <td>@item.SendDate</td>
                                        <td>@item.Subject</td>
                                        <td>@item.Content</td>                                                                              
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
